<h3 class="mb-4">About <%= @business.name %></h3>

<div class="row mb-4">
  <div class="col-sm-3">
    <img src="<%= @business.image_url %>" class="img-fluid rounded float-left" alt="Responsive image">
  </div>
  <div class="col-sm-9">
    <h5 class="mb-1"><%= @business.name %></h5>
    <div class="mb-1">
      <img src="<%= asset_path('yelp_stars/' + @business.rating.to_s.gsub(".","_") + '.png')%>" class="img-fluid" alt="Responsive image">
      based on <%= @business.total_reviews %> reviews on<a target="_blank" href="<%= @business.data_source_url %>"><img src="<%= asset_path('yelp_fullcolor_xs.png')%>" class="img-fluid" alt="Responsive image"></a>
    </div>
    <div class="mb-2"><%= @business.address.display_address %></div>
    <div><%= @business.phone %></div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <strong>Categories</strong>
    <div>
      <a href='#'><%= @business.categories.join(", ") %></a>
    </div>
  </div>
  <div class="col">
    <strong>Price range</strong>
    <div>
      <span id="price-display"><%= "$" * @business.price %></span><span id="price-total"><%= "$" * (4 - @business.price.to_i) %></span>
      <%= @business.price_description %>
    </div>
  </div>
  <div class="col">
    <strong>Neighborhood</strong>
    <div>
      <a href='#'><%= @business.address.neighborhood %></a>
    </div>
  </div>
  <div class="col">
    <strong>Cross Streets</strong>
    <div>
      <%= @business.address.cross_street %>
    </div>
  </div>
</div>

<div class="text-center">
  <img src="<%= asset_path('map-display2.png')%>" class="img-fluid mb-4" alt="Responsive image">
</div>

<div class="border-bottom mb-4">
  <div class="row mb-2 align-items-center">
    <div class="col-sm-2">
      <img src="<%= asset_path('yelp_fullcolor.png')%>" class="img-fluid" alt="Responsive image">
    </div>
    <div class="col-sm-10">
      reviews for <%= @business.name %>
    </div>
  </div>

  <% @business.reviews.each do |review| %>
    <div class="row pb-4 align-items-center">
      <div class="col-sm-2 text-center">
        <img src="<%= asset_path('yelp_stars/'+review.rating.to_f.to_s.gsub(".","_")+'.png')%>" class="img-fluid mb-4" alt="Responsive image">
      </div>
      <div class="col-sm-10">"<%= review.text%>"
        <a target="_blank" href='<%= review.review_source_url%>'>read more</a>
      </div>
    </div>
  <% end %>
</div>

<p class="text-center">Is this your business? Take a moment to
  <a href='#'>claim the page</a> and customize it for free.
</p>
